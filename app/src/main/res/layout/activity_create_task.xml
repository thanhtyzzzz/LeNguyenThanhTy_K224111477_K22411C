<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_create_task"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/edtTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_task_title"
        android:padding="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edittext_border"
        android:textColorHint="@color/textSecondary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_assign_to"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:layout_marginBottom="5dp" />

    <Spinner
        android:id="@+id/spinnerAssignTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/edittext_border" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_customer_phones"
        android:textColor="@color/textPrimary"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp" />

    <Button
        android:id="@+id/btnSelectCustomer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_select_customer"
        android:textColor="@color/white"
        android:backgroundTint="@color/buttonPrimary"
        style="@style/ButtonStyle" />

    <ListView
        android:id="@+id/lvSelectedCustomers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/btnCreateTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_create_task"
        android:textColor="@color/white"
        android:backgroundTint="@color/buttonSuccess"
        style="@style/ButtonStyle" />
</LinearLayout>